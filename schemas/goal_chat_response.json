{
  "type": "object",
  "additionalProperties": false,
  "required": [
    "assistant_message",
    "referenced_data_points",
    "detected_gaps",
    "suggested_actions",
    "recommended_improvements",
    "needs_followup",
    "followup_questions",
    "confidence"
  ],
  "properties": {
    "assistant_message": { "type": "string" },
    "referenced_data_points": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["metric", "label", "period", "value", "unit", "evidence_entry_ids"],
        "properties": {
          "metric": { "type": "string" },
          "label": { "type": "string" },
          "period": { "type": "string" },
          "value": { "type": ["number", "null"] },
          "unit": { "type": ["string", "null"] },
          "evidence_entry_ids": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "detected_gaps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["metric", "date", "question", "severity"],
        "properties": {
          "metric": { "type": "string" },
          "date": { "type": ["string", "null"] },
          "question": { "type": "string" },
          "severity": { "type": ["string", "null"], "enum": ["low", "medium", "high", null] }
        }
      }
    },
    "suggested_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "goal_id", "due_date", "priority", "status", "rationale"],
        "properties": {
          "title": { "type": "string" },
          "goal_id": { "type": ["string", "null"] },
          "due_date": { "type": ["string", "null"] },
          "priority": { "type": "string", "enum": ["low", "medium", "high"] },
          "status": { "type": ["string", "null"], "enum": ["open", "in_progress", "done", "cancelled", null] },
          "rationale": { "type": ["string", "null"] }
        }
      }
    },
    "recommended_improvements": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "goal_id", "rationale", "expected_impact", "time_horizon_days", "priority"],
        "properties": {
          "title": { "type": "string" },
          "goal_id": { "type": ["string", "null"] },
          "rationale": { "type": "string" },
          "expected_impact": { "type": ["string", "null"] },
          "time_horizon_days": { "type": ["integer", "null"] },
          "priority": { "type": "string", "enum": ["low", "medium", "high"] }
        }
      }
    },
    "needs_followup": { "type": "boolean" },
    "followup_questions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "confidence": { "type": "number" }
  }
}
