{
  "type": "object",
  "additionalProperties": false,
  "required": [
    "thread_id",
    "goal_id",
    "summary",
    "insights",
    "improvements",
    "todos",
    "confidence"
  ],
  "properties": {
    "thread_id": { "type": "string" },
    "goal_id": { "type": ["string", "null"] },
    "summary": { "type": "string" },
    "insights": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "goal_id", "evidence", "confidence"],
        "properties": {
          "title": { "type": "string" },
          "goal_id": { "type": ["string", "null"] },
          "evidence": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["entry_id", "note"],
              "properties": {
                "entry_id": { "type": "string" },
                "note": { "type": "string" }
              }
            }
          },
          "confidence": { "type": "number" }
        }
      }
    },
    "improvements": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "goal_id", "rationale", "success_metric", "target_value", "review_cadence_days", "priority"],
        "properties": {
          "title": { "type": "string" },
          "goal_id": { "type": ["string", "null"] },
          "rationale": { "type": "string" },
          "success_metric": { "type": ["string", "null"] },
          "target_value": { "type": ["number", "null"] },
          "review_cadence_days": { "type": ["integer", "null"] },
          "priority": { "type": "string", "enum": ["low", "medium", "high"] }
        }
      }
    },
    "todos": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "goal_id", "due_date", "priority", "status", "source_message_ids", "rationale"],
        "properties": {
          "title": { "type": "string" },
          "goal_id": { "type": ["string", "null"] },
          "due_date": { "type": ["string", "null"] },
          "priority": { "type": "string", "enum": ["low", "medium", "high"] },
          "status": { "type": ["string", "null"], "enum": ["open", "in_progress", "done", "cancelled", null] },
          "source_message_ids": { "type": "array", "items": { "type": "string" } },
          "rationale": { "type": ["string", "null"] }
        }
      }
    },
    "confidence": { "type": "number" }
  }
}
