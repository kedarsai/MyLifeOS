{
  "type": "object",
  "additionalProperties": false,
  "required": [
    "assistant_message",
    "referenced_data_points",
    "detected_gaps",
    "proposed_actions",
    "needs_followup",
    "followup_questions",
    "confidence"
  ],
  "properties": {
    "assistant_message": { "type": "string" },
    "referenced_data_points": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["metric", "label", "period", "value", "unit", "evidence_entry_ids"],
        "properties": {
          "metric": { "type": "string" },
          "label": { "type": "string" },
          "period": { "type": "string" },
          "value": { "type": ["number", "null"] },
          "unit": { "type": ["string", "null"] },
          "evidence_entry_ids": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "detected_gaps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["metric", "date", "question", "severity"],
        "properties": {
          "metric": { "type": "string" },
          "date": { "type": ["string", "null"] },
          "question": { "type": "string" },
          "severity": { "type": ["string", "null"] }
        }
      }
    },
    "proposed_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["action_type", "label", "params", "requires_confirmation"],
        "properties": {
          "action_type": {
            "type": "string",
            "enum": ["create_task", "create_improvement", "save_card", "update_idea_status", "convert_idea"]
          },
          "label": { "type": "string" },
          "params": {
            "type": "object",
            "additionalProperties": false,
            "required": ["title", "rationale", "body_md", "tags", "status", "target_type", "due_date", "priority", "idea_id"],
            "properties": {
              "title": { "type": ["string", "null"] },
              "rationale": { "type": ["string", "null"] },
              "body_md": { "type": ["string", "null"] },
              "tags": { "type": ["array", "null"], "items": { "type": "string" } },
              "status": { "type": ["string", "null"] },
              "target_type": { "type": ["string", "null"] },
              "due_date": { "type": ["string", "null"] },
              "priority": { "type": ["string", "null"] },
              "idea_id": { "type": ["string", "null"] }
            }
          },
          "requires_confirmation": { "type": "boolean" }
        }
      }
    },
    "needs_followup": { "type": "boolean" },
    "followup_questions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "confidence": { "type": "number" }
  }
}
